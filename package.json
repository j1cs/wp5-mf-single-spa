{
  "name": "base",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "concurrently \"wsrun --parallel build\"",
    "build:dev": "concurrently \"wsrun --parallel build:dev\"",
    "serve": "wsrun --parallel serve",
    "install:all": "wsrun --parallel install",
    "format": "wsrun --parallel format",
    "upgrade:packages": "wsrun --parallel upgrade:packages",
    "start": "concurrently \"wsrun --parallel start\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "wsrun": "^5.2.4"
  }
}
